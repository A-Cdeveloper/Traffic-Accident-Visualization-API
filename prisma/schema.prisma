generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "mysql"
}

model TrafficAccident {
  id           Int      @id @default(autoincrement())
  accidentId   Int      @unique @map("accident_id")
  city         String
  municipality String
  dateTime     DateTime @map("date_time")
  longitude    Float
  latitude     Float
  accidentType String   @map("accident_type")
  category     String
  description  String?  @db.Text
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@index([accidentId])
  @@index([city])
  @@index([municipality])
  @@index([dateTime])
  @@index([latitude, longitude])
  @@map("traffic_accidents")
}
